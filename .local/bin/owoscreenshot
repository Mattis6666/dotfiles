#!/bin/sh
set -e

if [ "$1" = "full" ]; then
	arg="screen"
else
	arg="gui"
fi

data="$(flameshot $arg --raw | base64)"
[ "$data" = "$(echo 'screenshot aborted' | base64)" ] && exit

echo "$data" \
	| base64 -d  \
	| owo -n _.png -t image/png - \
	| toclip

notify-send -i "$HOME/.local/share/icons/owo.png" OwO "Copied to clipboard"
