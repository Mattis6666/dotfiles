#!/usr/bin/sh

notify="notify-send -a ProtonVPN -i /home/ven/.local/share/icons/protonvpn.png -t 4000"

if [[ "$(sudo protonvpn status)" =~ "Connected" ]]; then
	sudo protonvpn disconnect > /dev/null &&
		$notify -u critical "ProtonVPN" "Disabled VPN"
else
	sudo protonvpn connect --fastest > /dev/null &&
		$notify -u normal "ProtonVPN" "Enabled VPN"
fi
